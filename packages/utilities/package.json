{
  "name": "@distributedlab/utilities",
  "version": "0.1.0",
  "description": "Collection of common utility functions and classes",
  "repository": {
    "type": "git",
    "url": "https://github.com/distributed-lab/web-kit/tree/main/packages/utilities"
  },
  "license": "MIT",
  "sideEffects": false,
  "typesVersions": {
    ">=4.2": {
      "*": [
        "./types/*"
      ]
    }
  },
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./cjs/index.js",
      "import": "./esm/index.js",
      "default": "./esm/index.js"
    }
  },
  "scripts": {
    "build": "yarn clean && yarn build:types && yarn build:cjs && yarn build:esm && node ./postbuild.js",
    "build:types": "tsc -p tsconfig.json --outDir ./dist/types --declaration --emitDeclarationOnly",
    "build:cjs": "tsc -p tsconfig.json --outDir ./dist/cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.json --outDir ./dist/esm --module esnext",
    "clean": "rm -rf dist",
    "test": "yarn jest",
    "typecheck": "tsc --noEmit",
    "publish-latest": "cd ./dist && npm publish",
    "publish-next": "cd ./dist && npm publish --tag next"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "jest": "^29.4.3",
    "tsc-alias": "^1.8.2"
  },
  "dependencies": {
    "dayjs": "^1.11.7",
    "tslib": "^2.5.0"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "readmeFile": "./README.md",
    "displayName": "@distributedlab/utilities"
  }
}
