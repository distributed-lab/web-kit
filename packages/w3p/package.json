{
  "name": "@distributedlab/w3p",
  "version": "1.0.0",
  "description": "Collection of common utility functions and classes",
  "repository": {
    "type": "git",
    "url": "https://github.com/distributed-lab/web-kit/tree/main/packages/w3p"
  },
  "homepage": "https://distributed-lab.github.io/web-kit/modules/_distributedlab_w3p.html",
  "license": "MIT",
  "sideEffects": false,
  "typesVersions": {
    ">=4.2": {
      "*": [
        "./dist/types/*"
      ]
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/index.js",
  "unpkg": "./dist/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "yarn clean && yarn build:types && yarn build:cjs && yarn build:esm && node ./postbuild.js",
    "build:types": "tsc -p tsconfig.json --outDir ./dist/types --declaration --emitDeclarationOnly",
    "build:cjs": "tsc -p tsconfig.json --outDir ./dist/cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.json --outDir ./dist/esm --module esnext",
    "clean": "rm -rf dist",
    "test": "yarn jest",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@distributedlab/tools": "workspace:^",
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/properties": "^5.7.0",
    "@near-wallet-selector/core": "^7.8.2",
    "@near-wallet-selector/my-near-wallet": "^7.8.2",
    "@solana/web3.js": "^1.73.2",
    "bs58": "^5.0.0",
    "ethers": "^5.7.2",
    "near-api-js": "^1.1.0",
    "web3-core": "^1.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "tsc-alias": "^1.8.2",
    "web3": "^1.7.4"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "readmeFile": "./README.md",
    "displayName": "@distributedlab/w3p"
  }
}
